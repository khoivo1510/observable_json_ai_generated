        {
            "label": "Configure - Default (nlohmann/json)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DUSE_AXZDICT=OFF",
                "-DUSE_JSONCPP=OFF",
                "-DUSE_RAPIDJSON=OFF",
                "-DUSE_JSON11=OFF",
                "-DBUILD_TESTS=ON",
                "-DBUILD_EXAMPLES=ON"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "detail": "Configure with nlohmann/json backend (default)"
        },
